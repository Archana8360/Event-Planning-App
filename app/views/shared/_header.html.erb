<header id="header" class="header fixed-top d-flex align-items-center">

    <div class="d-flex align-items-center justify-content-between">
      <%= link_to authenticated_root_path, class: "logo d-flex align-items-center" do %> 
        <img src="<%= asset_path('logo.png') %>" alt="">
        <span class="d-none d-lg-block">AdminPanel</span>
      <% end %>
      <i class="bi bi-list toggle-sidebar-btn"></i>
    </div><!-- End Logo -->


    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">

        <li class="nav-item dropdown pe-3">

          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            

            <% if current_user.profile.present? %>
              <% if current_user.profile.image.attached? %>
                <%= image_tag(current_user.profile.image, alt: "Profile", class: "rounded-circle") %>
              <% else %>
                <img src="<%=  asset_path('profile-img.jpg') %>" alt="Profile" class="rounded-circle">
              <% end %>
              <span class="d-none d-md-block dropdown-toggle ps-2"><%= current_user.profile.first_name %></span>
            <% else %>
              <img src="<%=  asset_path('profile-img.jpg') %>" alt="Profile" class="rounded-circle">
              <span class="d-none d-md-block dropdown-toggle ps-2">No Profile</span>
            <% end %>

          </a><!-- End Profile Iamge Icon -->

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
            <li class="dropdown-header">
              <% if current_user.profile.present? %>
                <h6><%= current_user.profile.first_name %></h6>
              <% else %>
                <h6>Admin</h6>
              <% end %>
              <span><%= current_user.email %></span>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <%= link_to admin_profile_path , class:"dropdown-item d-flex align-items-center" do %>
                <i class="bi bi-person"></i>
                <span>My Profile</span>
              <% end %>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            <li>
              <%= link_to admin_profile_path , class:"dropdown-item d-flex align-items-center" do %>
                <i class="bi bi-gear"></i>
                <span>Account Settings</span>
              <% end %>
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>

            
              <hr class="dropdown-divider">
            </li>

            <li>
            <%= link_to admin_logout_path, 'data-turbo-method': :delete, class: "dropdown-item d-flex align-items-center" do %>
                <i class="bi bi-box-arrow-right"></i>
                <span>Sign Out</span>
              <% end %>
            </li>

          </ul><!-- End Profile Dropdown Items -->
        </li><!-- End Profile Nav -->

      </ul>
    </nav><!-- End Icons Navigation -->

  </header><!-- End Header -->