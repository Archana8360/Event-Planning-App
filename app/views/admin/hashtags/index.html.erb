<p style="color: green"><%= notice %></p>

<%= render partial: "shared/header" %>
<%= render partial: "shared/sidebar" %>


<main id="main" class="main">
    <div class="pagetitle">
      <h1>Manage Hashtags</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", authenticated_root_path %></li>
          <li class="breadcrumb-item">Hashtag Management</li>
          <li class="breadcrumb-item active">Hashtags</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section Users">
      <div class="row">
        <div class="col-12">
              <div class="card recent-sales overflow-auto">
                <div class="card-body">
                  <div style="display: flex; align-items: center;">
                    <h5 class="card-title" style="margin-bottom: 10;">Hashtag <span>| List</span></h5>
                      <%= link_to "Add Hashtag", new_admin_hashtag_path, style: "margin-left: 890px;", class: "btn btn-primary" %>
                  </div>


                <table class="table table-borderless datatable" >

                <thead>
                    <tr>
                    <th scope="col">Hashtag Name</th> 
                    <th scope="col" data-searchable="false">Status</th>
                    <th scope="col" data-searchable="false" data-sortable="false">Actions</th>

                    </tr>
                </thead>
                  <tbody>
                    <% @hashtags.each do |h| %>
                    <tr>
                      <td><%= h.name %></a></td>                    
                      <% if h.status == false %>
                        <% cat_status = "Inactive"%>
                        <td><span class="badge bg-danger"><%=link_to cat_status,update_status_admin_hashtag_path(h),data:{'turbo-method': :patch , turbo_confirm: 'Are you sure you want to active this hashtag?'} , style: "color: white;"%></span></td>
                      <% else %>
                        <% cat_status = "Active"%>
                      <td><span class="badge bg-success"><%=link_to cat_status,update_status_admin_hashtag_path(h),data:{'turbo-method': :patch , turbo_confirm: 'Are you sure you want to suspend this hashtag?'}, style: "color: white;" %></span></td>
                      <% end %>
                      <td>
                      <div class="action-links">
                        <%= link_to "", edit_admin_hashtag_path(h), class: "fa-solid fa-pencil text-decoration-none", style: "margin-right: 10px;" %>
                        <%= link_to "", admin_hashtag_path(h), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "fa-solid fa-trash" %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->
<%= render partial: "shared/footer" %>


